{
  "compilerOptions": {
    "target": "ES2020",                   
    "module": "CommonJS",             
    "rootDir": "./src",          
    "outDir": "./dist",               
    "strict": true,                      
    "esModuleInterop": true,              
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true,               
    "noImplicitAny": true,               
    "moduleResolution": "node",         
    "incremental": true,
    "typeRoots": ["./src/types", "./node_modules/@types"]                  
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
